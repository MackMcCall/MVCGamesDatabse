@model Game

<h3>@Model.Title Information</h3>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Genre</th>
        <th>Release Year</th>
        <th>Publisher</th>
        <th>Platform</th>
    </tr>


    <tr>
        <td>@Model.GameID</td>
        <td>@Model.Title</td>
        <td>@Model.Genre</td>
        <td>@Model.ReleaseYear</td>
        <td>@Model.Publisher</td>
        <td>@Model.Platform</td>
    </tr>

</table>

<div style="display: block">
    <a href="/Game/UpdateGame/@Model.GameID">Update this Game</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteGame", "Game", "Post"))
    {
        <input type="hidden" asp-for="GameID" value="@Model.GameID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this game" />
    }
</div>
